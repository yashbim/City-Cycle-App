<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/bg_blue">

        <TextView
            android:id="@+id/textPromoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Christmas Special"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blue1"/>

        <TextView
            android:id="@+id/textPromoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent a bike this Christmas and get 30% off!"
            android:textSize="14sp"
            android:textColor="@color/DarkGrey"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/textPromoDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount: 30%"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
